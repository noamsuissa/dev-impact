# Backend Environment Variables
# Copy this file to .env and fill in your actual values
ENVIRONMENT=your-environment

# Supabase Configuration
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id

# CORS Configuration
CORS_ALLOWED_ORIGINS=comma-separated-list-of-allowed-origins
CORS_ALLOWED_ORIGIN_REGEX=regex-for-allowed-origins #used for vercel app urls

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT_LIMITS=x/minute,y/hour

# Authentication Redirect URL
AUTH_REDIRECT_URL=http://localhost:5173

# Base Domain for Profile Subdomains
BASE_DOMAIN=dev-impact.io

# Project Evidence Configuration
FREE_MAX_USER_EVIDENCE_SIZE_MB=50

# Email Configuration (for waitlist)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Dev Impact

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_PRICE_ID=price_your-stripe-price-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret